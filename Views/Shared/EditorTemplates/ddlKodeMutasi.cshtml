            },
            new SelectListItem() {
                Text = "DEMOSI",
                Value = "DEMOSI"
            },
            new SelectListItem() {
                Text = "ROTASI",
                Value = "ROTASI"
            },
            new SelectListItem() {
                Text = "LAIN-LAIN",
                Value = "LAIN-LAIN"
            }
        })
        .Events(e => { e.Select("ddlKodeMutasiOnSelect"); e.Change("ddlKodeMutasiOnSelect"); })
