@model string

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(new List<SelectListItem>()
        {
            new SelectListItem() {
                Text = "Stok Sekper",
                Value = "Stok Sekper"
            },
            new SelectListItem() {
                Text = "Stok Koperasi",
                Value = "Stok Koperasi"
            },
            new SelectListItem() {
                Text = "Stok IHT",
                Value = "Stok IHT"
            }
        })
        .Events(e => { e.Change("ddlPilihanStokOnChange"); e.Select("ddlPilihanStokOnChange"); })
)
@Html.ValidationMessageFor(m => m)
