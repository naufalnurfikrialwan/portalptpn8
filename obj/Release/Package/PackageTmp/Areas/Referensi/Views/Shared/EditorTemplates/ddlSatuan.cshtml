@model Ptpn8.Areas.Referensi.Models.Satuan

@(Html.Kendo().DropDownListFor(m => m)
        .Name("ddlSatuan")
        .OptionLabel("Pilih Satuan...")
        .DataTextField("Nama")
        .DataValueField("SatuanId")
        .DataSource(dataSource =>
        {
            dataSource.Read(read => read.Action("getSatuan", "ddl")).ServerFiltering(true);

        })
        .Events(e => { e.Select("ddlSatuanOnSelect"); e.DataBound("ddlSatuanOnDataBound"); })
)
@Html.ValidationMessageFor(m => m)


