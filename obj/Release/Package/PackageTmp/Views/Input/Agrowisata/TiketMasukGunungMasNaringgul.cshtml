                            <label>No Polisi</label>
                        </td>
                        <td width="1%" style="color:white">
                            <label>:</label>
                        </td>
                        <td width="40%">
                            @(Html.Kendo().TextBoxFor(m => m.NomorPolisi)
                            .HtmlAttributes(new { required = "required", data_required_msg = "Nama Pelanggan", style = "width: 55%" })
                            )
                        </td>
                    </tr>
                    <tr>
                        <td width="15%" style="color:white">
                            <label>Tarif Parkir</label>
                        </td>
                        <td width="1%" style="color:white">
                            <label>:</label>
                        </td>
                        <td width="40%">
                            @(Html.Kendo().NumericTextBoxFor(m => m.TarifParkir)
                            .HtmlAttributes(new { required = "required", data_required_msg = "Nama Pelanggan", style = "width: 50%" })
                            )
                        </td>
                    </tr>
                    <tr>
                        <td width="15%" style="color:white">
                            <label>Jumlah Orang</label>
                        </td>
                        <td width="1%" style="color:white">
                            <label>:</label>
                        </td>
                        <td width="40%">
                            @(Html.Kendo().NumericTextBoxFor(m => m.JumlahDewasa)
                            .HtmlAttributes(new { required = "required", data_required_msg = "Nama Pelanggan", style = "width: 50%" })
                            .Events(e => e.Change("JumlahDewasaOnChange"))
