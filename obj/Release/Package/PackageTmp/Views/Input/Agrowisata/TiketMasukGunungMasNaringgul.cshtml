                    <tr>
                        <td width="100%;">
                            <label id="msgInputView" style="text-align:center; color: white; background-color: red; font-size: medium;"></label>
                        </td>
                    </tr>
                </table>

                <table width="50%;" align="center">
                    @*<tr>
                        <td width="15%" style="color:white">
                            <label>Tanggal Masuk</label>
                        </td>
                        <td width="1%" style="color:white">
                            <label>:</label>
                        </td>
                        <td width="40%">
                            @(Html.Kendo().DatePickerFor(m => m.TanggalMasukKendaraan)
                            .HtmlAttributes(new { required = "required", data_required_msg = "Nama Pelanggan", style = "width: 50%" })
                            .Format("dd/MM/yyyy")
                            )
                        </td>
                    </tr>*@
                    <tr>
                        <td width="15%" style="color:white">
                            <label>Jenis Kendaraan</label>
                        </td>
                        <td width="1%" style="color:white">
                            <label>:</label>
                        </td>
                        <td width="40%">
                            @(Html.Kendo().DropDownList()
                                .Name("JenisKendaraan")
                                .AutoBind(false)
                                .DataTextField("Text")
                                .DataValueField("Value")
                                .SelectedIndex(0)
                                .Events(e => { e.Change("JenisKendaraanOnChange"); e.Select("JenisKendaraanOnChange"); })
