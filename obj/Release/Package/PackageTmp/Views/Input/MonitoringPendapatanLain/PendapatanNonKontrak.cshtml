        .Grid<Ptpn8.MonitoringPendapatanLain.Models.MonitoringPendapatanLain_ViewDTL_PendapatanNonKontrak>(Guid.Empty.ToString())
        .Name("grdDetail")
        .Columns(g =>
        {
            g.Bound(i => i.MonitoringPendapatanLain_DTL_PendapatanNonKontrakId).Width(50).Hidden();
            g.Bound(i => i.MonitoringPendapatanLain_HDR_PendapatanNonKontrakId).Width(50).Hidden();
            g.Group(i => i
                .Title("Keterangan Pendapatan")
                .Columns(c =>
                {
                    c.Bound(q => q.Uraian).Width(300).Title("Uraian").HtmlAttributes(new { style = "text-align: left" });                    
                    c.Bound(q => q.Periode).Width(100).Title("Periode").HtmlAttributes(new { style = "text-align: left" })
                    .ClientFooterTemplate("JUMLAH")
                    .FooterHtmlAttributes(new { style = "text-align: center; background: silver;" });
                })
            );
            g.Group(i => i
                .Title("Tagihan")
                .Columns(c =>
                {
                    c.Bound(q => q.NilaiSebelumPPN).Width(100).Format("{0:N0}").Title("Nilai Sebelum PPN").HtmlAttributes(new { style = "text-align: center;  font-weight : 700" })
                    .ClientFooterTemplate("#= kendo.toString(sum,'n0') #")
                    .FooterHtmlAttributes(new { style = "text-align: right; background: silver;" });
                    c.Bound(q => q.PPN).Width(100).Title("PPN").Format("{0:N0}").HtmlAttributes(new { style = "text-align: center; font-weight : 700" })
                    .ClientFooterTemplate("#= kendo.toString(sum,'n0') #")
                    .FooterHtmlAttributes(new { style = "text-align: right; background: silver;" });
                    c.Bound(q => q.Jumlah).Width(100).Title("Jumlah").Format("{0:N0}").HtmlAttributes(new { style = "text-align: center; font-weight : 700" })
                    .ClientFooterTemplate("#= kendo.toString(sum,'n0') #")
                    .FooterHtmlAttributes(new { style = "text-align: right; background: silver;" });
                })
            );
            g.Command(command =>
            {
                command.Custom("Delete").Text("Hapus Baris").Click("openWindow")
                    .HtmlAttributes(new { @class = "k-button k-font-icon k-i-trash", style = "font-size: small; background-color: red; color: white; height: 20px;" });
            }).Width(200);
        })
        .ToolBar(toolbar =>
        {
            toolbar.Template("<a class='k-button k-grid-add' style='background-color: blue; color: white; font-size:small;' href='#'></span><span class='k-font-icon k-i-plus'></span>Tambah Baris</a>" +
                            "<a class='k-button' style='background-color: green; color: white; font-size:small;' onclick='sendData()' href='#'></span><span class='k-font-icon k-i-restore'></span>Simpan</a>" +
                            "<a class='k-button' style='background-color: red; color: white; font-size:small;' onclick='hapusSeluruh()' href='#'></span><span class='k-font-icon k-i-trash'></span>Hapus Semua Baris</a>");
        })
        .AutoBind(false)
        .Editable(editable => { editable.Mode(GridEditMode.InCell); editable.DisplayDeleteConfirmation(false); })
        .Navigatable()
        .Resizable(resizeable => resizeable.Columns(true))
        .Scrollable()
        .Sortable()
        .Groupable()
        .HtmlAttributes(new { style = "Height: 450px" })
        .Events(e =>
        {
            e.Change("grdOnChange");
            e.Edit("grdOnEdit");
        })
        .DataSource(o => o
            .Ajax()
            .ServerOperation(false)
            .Sort(s => s.Add(x => x.Periode))
            .Batch(true)
            .Model(model =>
            {
                model.Id(p => p.MonitoringPendapatanLain_DTL_PendapatanNonKontrakId);
            })
            .Read(read => read.Action("detailRead", "Input").Data("filterdetailRead").Type(HttpVerbs.Post))
            .Create(create => create.Action("detailCreate", "Input").Data("filterdetailCreate").Type(HttpVerbs.Post))
            .Update(update => update.Action("detailUpdate", "Input").Data("filterGridUpdate").Type(HttpVerbs.Post))
            .Destroy(destroy => destroy.Action("detailDestroy", "Input").Data("filterGridDestroy").Type(HttpVerbs.Post))
            .Aggregates(ag =>
            {
                ag.Add(x => x.NilaiSebelumPPN).Sum();
                ag.Add(x => x.PPN).Sum();
                ag.Add(x => x.Jumlah).Sum();
            })

        )
    )
</div>

