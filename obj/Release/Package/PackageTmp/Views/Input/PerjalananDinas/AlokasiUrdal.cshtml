<!--Reference the autogenerated SignalR hub script. -->
<script src="@Url.Content("~/signalr/hubs")"></script>

<script src="~/Scripts/PerjalananDinas/AlokasiUrdal.js"></script>
@(
    // All deferred initialization statements will be rendered here
    Html.TelerikReporting().DeferredScripts()
)

<div id="_header" style="font-size:10px;" ng-app="__header">
    <div class="k-content" ng-controller="MyCtrl">
        <form kendo-validator="validator" ng-submit="validate($event)">
            <table width="100%" class="hdr">
                <tr>
                    <td>
                        <div style="text-align:center">@ViewBag.Title</div>
                    </td>
                </tr>
            </table>
            <table width="100%">
                <tr>
                    <td width="33%" style="vertical-align:top;">
                        <table width="100%">
                            <tr>
                                <td style="vertical-align:top">
                                    <label style="color: black; background-color: lightgray; text-align: center;">Cari Perjalanan Dinas</label>
                                    <table width="100%;" style="border: 1px solid lightgray; margin-bottom : 5px;">
                                        <tr>
                                            <td width="25%">
                                                <label>Tanggal Keberangkatan:</label>
                                            </td>
                                            <td width="20%">
                                                @(Html.Kendo().DatePicker().Name("TanggalAwal").Format("yyyy-MM-dd")
                                                        .Value(DateTime.Now)
                                                )
                                            </td>
                                            <td width="20%">
                                                <button id="btnSubmitHeader" class="submit k-button" type="submit">Proses</button>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td style="vertical-align:top"></td>
                </tr>
            </table>
        </form>
    </div>
</div>

<div id="_detail">
    @(Html.Kendo()
    .Grid<Ptpn8.PerjalananDinas.Models.AlokasiUrdal>(Guid.Empty.ToString())
    .Name("grdDetail")
    .Columns(g =>
    {
        g.Bound(i => i.AlokasiUrdalId).Width(100).Hidden();
        g.Bound(i => i.NomorPermintaan).Width(100).Title("No Permintaan");
        g.Bound(i => i.TanggalPermintaan).Width(80).Format("{0:dd-MM-yyyy}").Title("Tanggal Pengajuan");
        g.Bound(i => i.Berangkat).Width(80).Format("{0:dd-MM-yyyy}").Title("Berangkat");
        g.Bound(i => i.Kembali).Width(80).Format("{0:dd-MM-yyyy}").Title("Kembali");
        g.Bound(i => i.JenisTujuan).Width(100).Title("Jenis Tujuan");
        g.Bound(i => i.StatusPerjalananDinas).Width(100).Title("Status Perjalanan");
        g.Bound(i => i.Tujuan).Width(100).Title("Tujuan");
        g.Bound(i => i.DapatBiayaPenginapan).Width(100).Title("Dapat Penginapan?").ClientTemplate("#= DapatBiayaPenginapan ? 'Dapat':'Tidak' #");
        g.Bound(i => i.Keterangan).Width(200).Title("Keterangan");
        g.Bound(i => i.CatatanKhusus).Width(200).Title("Catatan Khusus");
        g.Bound(i => i.KendaraanDinas).Width(100).Title("Kendaraan").ClientTemplate("#= KendaraanDinas ? 'Mobil Dinas':'Umum' #");
        g.Bound(i => i.AlokasiKendaraan).Width(170).Title("Alokasi Kendaraan");
        g.Bound(i => i.NamaDriver).Width(100).Title("Sopir");
        g.Bound(i => i.NopolKendaraan).Width(100).Title("Nopol Kendaraan");
        g.Bound(i => i.NomorAlokasi).Width(180).Title("No BPD");
        g.Bound(i => i.KeteranganUrdal).Width(200).Title("Keterangan Urdal");
        g.Bound(i => i.TanggalAlokasi).Width(80).Format("{0:dd-MM-yyyy}").Title("Tanggal Alokasi").Hidden();
        g.Bound(i => i.NamaPimpinan).Width(200).Title("Nama");
        g.Bound(i => i.Anggota).Width(100).Title("Jml Peserta");
        g.Bound(i => i.UangBensin).Width(100).Title("Uang Bensin");
        g.Bound(i => i.JumlahHari).Width(100).Hidden();

        g.Command(command =>
        {
            command.Custom("btnPrintHeader").Text(" Cetak SPD").Click("btnPrintHeaderOnClick")
                .HtmlAttributes(new { @class = "k-button k-font-icon k-i-print", style = "font-size: small; background-color: green; color: white; height: 20px;" });
            command.Custom("Delete").Text(" Hapus Baris").Click("openWindow")
                                .HtmlAttributes(new { @class = "k-button k-font-icon k-i-trash", style = "font-size: small; background-color: red; color: white; height: 20px;" });
        }).Width(250);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Template
                        ("<a class='k-button' style='background-color: green; color: white; font-size:small;' onclick='sendData()' href='#'></span><span class='k-font-icon k-i-restore'></span>Simpan</a>");
    })
    .AutoBind(false)
    .Editable(editable => { editable.Mode(GridEditMode.InCell); editable.DisplayDeleteConfirmation(false); })
    .Navigatable()
    .Resizable(resizeable => resizeable.Columns(true))
    .Scrollable()
    .Sortable()
    .Groupable()
    .HtmlAttributes(new { style = "Height: 450px" })
    .Events(e =>
    {
        e.Change("grdOnChange");
        e.Edit("grdOnEdit");
    })
    .DataSource(o => o
        .Ajax()
        .ServerOperation(false)
        .Batch(true)
            .Model(model =>
            {
                model.Id(p => p.AlokasiUrdalId);
            })
        .Read(read => read.Action("detailRead", "Input").Data("filterdetailRead").Type(HttpVerbs.Post))
        .Create(create => create.Action("detailCreate", "Input").Data("filterdetailCreate").Type(HttpVerbs.Post))
        .Update(update => update.Action("detailUpdate", "Input").Data("filterGridUpdate").Type(HttpVerbs.Post))
        .Destroy(destroy => destroy.Action("detailDestroy", "Input").Data("filterGridDestroy").Type(HttpVerbs.Post))
    )
    )

</div>



@*footer*@
