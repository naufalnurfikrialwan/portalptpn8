            .Navigatable()
            .Resizable(resizeable => resizeable.Columns(true))
            .Scrollable()
            .Excel(excel => excel.AllPages(true))
            .Sortable()
            .Groupable()
            .Filterable()
            .HtmlAttributes(new { style = "Height: 600px" })
            .Events(e =>
            {
                e.DataBound("grdOnDataBound");
            })
            .DataSource(o => o
                .Ajax()
                .ServerOperation(false)
                .Batch(true)
                .Model(model =>
                {
                    model.Id(p => p.DisposisiSuratDinasMasukId);
                })
                .Read(r => r.Action("GetDataFromGRID", "Input").Data("filterDisposisiSuratDinasMasuk").Type(HttpVerbs.Post))
