            .Name("grdDetail")
            .Columns(g =>
            {
                g.Bound(i => i.SuratDinasMasukId).Hidden();
                g.Bound(i => i.DisposisiSuratDinasMasukId).Hidden();
                g.Bound(i => i.TujuanId_SuratDinasMasuk).Hidden();
