@model Ptpn8.Models.MemoOnline.View_SuratDinasKeluar
@**@

<script src="@Url.Content("~/ReportViewer/js/telerikReportViewer-10.2.16.725.js")"></script>
<script src="~/Scripts/PerjalananDinas/SuratKeluar.js"></script>
