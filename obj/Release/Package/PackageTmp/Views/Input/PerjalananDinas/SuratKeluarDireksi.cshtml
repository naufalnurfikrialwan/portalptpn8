                            c.Bound(j => j.NomorAgenda_SuratMasuk).Hidden();
                            c.Bound(i => i.StatusTindakLanjutMemoDinas).Title("T/L").Width(50).HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Bound(j => j.NomorInputView).Title("Nomor").Width(120).HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Bound(j => j.Tanggal_MemoDinas).Title("Tanggal Memo").Width(70).HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Bound(j => j.Perihal_MemoDinas).Title("Perihal").Width(200).HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Bound(j => j.NamaTujuan_MemoDinas).Title("Tujuan").Width(120).ClientTemplate("#= NamaTujuan_MemoDinas #" + "<br/> cc: " + "#= CCNamaTujuan_MemoDinas #").HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Bound(j => j.StatusMemoDinas).Title("Status").Width(70).HtmlAttributes(new { style = "text-align: center; color: black; font-weight : 400" });
                            c.Command(command =>
                            {
                                command.Custom("IsiMemo").Text("View").Click("openWindowIsiMemo")
                                    .HtmlAttributes(new { @class = "k-button k-font-icon k-i-justify-clear", style = "font-size: small; font-weight: 500;" });
                            }).Width(50);

                        })
                        .AutoBind(false)
                        .Navigatable()
                        .Resizable(resizeable => resizeable.Columns(true))
                        .Scrollable()
                        .Excel(excel => excel.AllPages(true))
                        .Sortable()
                        .Groupable()
                        .Filterable()
                        .HtmlAttributes(new { style = "Height: 450px" })
                        .ClientDetailTemplateId("terimaMemoDinas")
                        .Events(ev=>ev.DataBound("grdOnDataBound"))
                        .DataSource(o => o
                            .Ajax()
                            .ServerOperation(false)
                            .Sort(s => s.Add(x => x.Tanggal_MemoDinas).Descending())
                            .Batch(true)
                            .Model(model =>
                            {
                                model.Id(p => p.Kirim_MemoDinasId);
                            })
                            .Read(read => read.Action("GetDataFromGRID", "Input").Data("filterdetailRead").Type(HttpVerbs.Post))
                        )
    )
</div>

