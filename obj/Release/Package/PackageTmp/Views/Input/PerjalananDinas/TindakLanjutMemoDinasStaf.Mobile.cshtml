    function hapusFile(nmFile) {
        var url = '/Input/RemoveUploadFile';
        var arr = [];
        arr.push($("#UnitId").val() + "_" + nmFile);
        return $.ajax({
            url: url,
            type: 'POST',
            datatype: 'json',
            data: {
                fileNames: arr,
                folder: "~/BuktiSelesaiMemo",
                unit: ""
            }
        });
    }

