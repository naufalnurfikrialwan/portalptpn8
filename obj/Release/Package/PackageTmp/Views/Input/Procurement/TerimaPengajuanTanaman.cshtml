                            .AutoBind(true)
                            .Name("BulanPeruntukan")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .HtmlAttributes(new { style = "width:55%", @class = "allcaps" })
                            .Events(e =>
                                            {
                                                e.Change("NamaBulanOnSelect");
                                            })
