<script>

    $(document).ready(function () {
        
    });

    function btnProsesOnClick()
    {
         EmpIDOnSelect();
    }

    function EmpIDOnSelect(e) {
        GetEmployee().done(function (data) {
            if (data) {
                var dta = data[0];
                $('#FullName').text(dta.FullName);
                $('#TempatLahir').text(dta.TempatLahir);
                $('#NegaraTempatLahir').text(dta.NegaraTempatLahir);
                $('#TanggalLahir').text(dta.TanggalLahir);
                $('#Agama').text(dta.Agama);
                GetBank(dta.EmpID).done(function (data) {
                    if (data) {
                        dta = data[0];
                        $('#IDD').val(dta.IDD);
                        $('#PersonnelNumber').val(dta.PersonnelNumber);
                        $('#StartDate').val(dta.StartDate);
                        $('#NamaPemilikRekening').val(dta.NamaPemilikRekening);
                        $('#NamaBank').val(dta.NamaBank);
                        $('#NoRekening').val(dta.NoRekening);
                        $('#TanggalEdit').val(dta.TanggalEdit);
                    }
                });
            }
        });
    }

    function GetEmployee() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM02_ListEmployee',
                scriptSQL: "SELECT [Emp ID] as EmpID,[Full Name] as FullName,[Tempat Lahir] as TempatLahir,[Tanggal Lahir] as TanggalLahir, [Negara Tempat Lahir] as NegaraTempatLahir, [Agama] as Agama FROM [SAPHCM].[dbo].[HCM02_ListEmployee] " +
                    "WHERE [Emp ID]='" + empID.substring(2,14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function GetBank() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM05_BankDetail',
                scriptSQL: "SELECT  IDD, [Emp ID] as EmpID, [Personnel Number] as PersonnelNumber, [Start Date] as StartDate, [Nama Pemilik Rekening] as NamaPemilikRekening, " +
                    "[Nama Bank] as NamaBank, [No Rekening] as NoRekening, TanggalEdit " +
                    "FROM [SAPHCM].[dbo].[HCM05_BankDetail] WHERE [Emp ID]='" + empID.substring(2, 14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function SimpanData() {
        var url = '/Input/ExecSQL';
        var IDD = $('#IDD').val();
        if (IDD == "") {
            IDD = guid();
        }
        var EmpID = $('#CariNIK').val().substring(2, 14);
        var PersonnelNumber = $('#PersonnelNumber').val();
        var StartDate = "01.01.2018";
        var NamaPemilikRekening = $('#NamaPemilikRekening').val();
        NamaPemilikRekening = NamaPemilikRekening.replace("'", "`");
        var NamaBank = $('#NamaBank').val();
        var NoRekening = $('#NoRekening').val();

        return $.ajax({
            url: url,
            data: {
                scriptSQL: "exec [SAPHCM].dbo.SimpanHCM05_BankDetail '" + IDD + "','" + EmpID + "','" + PersonnelNumber + "','" + StartDate + "','" + NamaPemilikRekening + "','" + NamaBank +
                    "','" + NoRekening + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }
    function guid() {
        function s4() {
            return Math.floor((1 + Math.random()) * 0x10000)
                .toString(16)
                .substring(1);
        }
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
            s4() + '-' + s4() + s4() + s4();
    }

</script>

