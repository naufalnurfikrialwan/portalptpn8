<script>

    $(document).ready(function () {
       
    });

    function btnProsesOnClick()
    {
         EmpIDOnSelect();
    }

    function EmpIDOnSelect(e) {
        GetEmployee().done(function (data) {
            if (data) {
                var dta = data[0];
                $('#FullName').text(dta.FullName);
                $('#TempatLahir').text(dta.TempatLahir);
                $('#NegaraTempatLahir').text(dta.NegaraTempatLahir);
                $('#TanggalLahir').text(dta.TanggalLahir);
                $('#Agama').text(dta.Agama);
                GetPajak(dta.EmpID).done(function (data) {
                    if (data) {
                        dta = data[0];
                        $('#IDD').val(dta.IDD);
                        $('#PersonnelNumber').val(dta.PersonnelNumber);
                        $('#StartDate').val(dta.StartDate);
                        $('#DuaDigitPertama').val(dta.DuaDigitPertama);
                        $('#TujuhDigitTengah').val(dta.TujuhDigitTengah);
                        $('#EnamDigitTerakhir').val(dta.EnamDigitTerakhir);
                        $('#StatusPernikahan').data('kendoDropDownList').value(dta.StatusPernikahan);
                        $('#SpouseBenefit').data('kendoDropDownList').value(dta.SpouseBenefit);
                        $('#NumberDependent').val(dta.NumberDependent);
                        //var tglNPWP = new Date(parseInt(dta.NPWPRegistrationDate.substr(6)));
                        $('#NPWPRegistrationDate').val(dta.NPWPRegistrationDate);
                        $('#TanggalEdit').val(dta.TanggalEdit);
                    }
                });
            }
        });
    }

    function GetEmployee() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM02_ListEmployee',
                scriptSQL: "SELECT [Emp ID] as EmpID,[Full Name] as FullName,[Tempat Lahir] as TempatLahir,[Tanggal Lahir] as TanggalLahir, [Negara Tempat Lahir] as NegaraTempatLahir, [Agama] as Agama FROM [SAPHCM].[dbo].[HCM02_ListEmployee] " +
                    "WHERE [Emp ID]='" + empID.substring(2,14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function GetPajak() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM06_TaxDataIndonesia',
                scriptSQL: "SELECT  IDD, [Emp ID] as EmpID, [Personnel Number] as PersonnelNumber, [Start Date] as StartDate, [2 Digit Pertama] as DuaDigitPertama, " +
                    "[7 Digit Tengah] as TujuhDigitTengah, [6 Digit Terakhir] as EnamDigitTerakhir, [Status Pernikahan] as StatusPernikahan, [Spouse Benefit] as SpouseBenefit, [Number Dependent] as NumberDependent, [NPWP Registration Date] as NPWPRegistrationDate, TanggalEdit " +
                    "FROM [SAPHCM].[dbo].[HCM06_TaxDataIndonesia] WHERE [Emp ID]='" + empID.substring(2, 14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function SimpanData() {
        var url = '/Input/ExecSQL';
        var IDD = $('#IDD').val();
        if (IDD == "") {
            IDD = guid();
        }
        var EmpID = $('#CariNIK').val().substring(2, 14);
        var PersonnelNumber = $('#PersonnelNumber').val();
        var StartDate = "01.01.2018";
        var DuaDigitPertama = $('#DuaDigitPertama').val();
        var TujuhDigitTengah = $('#TujuhDigitTengah').val();
        var EnamDigitTerakhir = $('#EnamDigitTerakhir').val();
        var StatusPernikahan = $('#StatusPernikahan').data('kendoDropDownList').value();
        var SpouseBenefit = $('#SpouseBenefit').data('kendoDropDownList').value();
        var NumberDependent = $('#NumberDependent').val();
        var NPWPRegistrationDate = $('#NPWPRegistrationDate').val().toString();
        var TanggalEdit = $('#TanggalEdit').val();

        return $.ajax({
            url: url,
            data: {
                scriptSQL: "exec [SAPHCM].dbo.SimpanHCM06_TaxDataIndonesia '" + IDD + "','" + EmpID + "','" + PersonnelNumber + "','" + StartDate + "','" + DuaDigitPertama + "','" + TujuhDigitTengah +
                    "','" + EnamDigitTerakhir + "','" + StatusPernikahan + "','" + SpouseBenefit + "','" + NumberDependent + "','" + NPWPRegistrationDate + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function guid() {
        function s4() {
            return Math.floor((1 + Math.random()) * 0x10000)
                .toString(16)
                .substring(1);
        }
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
            s4() + '-' + s4() + s4() + s4();
    }
</script>

