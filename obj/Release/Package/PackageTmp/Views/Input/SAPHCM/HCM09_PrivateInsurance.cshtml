<script>

    $(document).ready(function () {
        
    });

    function btnProsesOnClick()
    {
         EmpIDOnSelect();
    }

    function EmpIDOnSelect(e) {
        GetEmployee().done(function (data) {
            if (data) {
                var dta = data[0];
                $('#FullName').text(dta.FullName);
                $('#TempatLahir').text(dta.TempatLahir);
                $('#NegaraTempatLahir').text(dta.NegaraTempatLahir);
                $('#TanggalLahir').text(dta.TanggalLahir);
                $('#Agama').text(dta.Agama);
                GetJamsostek(dta.EmpID).done(function (data) {
                    if (data) {
                        dta = data[0];
                        $('#IDD').val(dta.IDD);
                        $('#PersonnelNumber').val(dta.PersonnelNumber);                        
                        $('#Subtype').data('kendoDropDownList').value(dta.Subtype);
                        $('#StartDate').val(dta.StartDate);
                        $('#EndDate').val(dta.EndDate);
                        $('#InsuranceschemecontributionlevelIndonesia').val(dta.Subtype);
                        $('#InsuranceAccountId').val(dta.InsuranceAccountId);
                        $('#NumberofDependentscoveredfortheInsuranceScheme').val(dta.NumberofDependentscoveredfortheInsuranceScheme);
                        $('#EmployeeAmountContribution').val(dta.EmployeeAmountContribution);
                        $('#TanggalEdit').val(dta.TanggalEdit);
                    }
                });
            }
        });
    }

    function GetEmployee() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM02_ListEmployee',
                scriptSQL: "SELECT [Emp ID] as EmpID,[Full Name] as FullName,[Tempat Lahir] as TempatLahir,[Tanggal Lahir] as TanggalLahir, [Negara Tempat Lahir] as NegaraTempatLahir, [Agama] as Agama FROM [SAPHCM].[dbo].[HCM02_ListEmployee] " +
                    "WHERE [Emp ID]='" + empID.substring(2,14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function GetJamsostek() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM09_PrivateInsurance',
                scriptSQL: "SELECT  IDD, [Emp ID] as EmpID, [Personnel Number] as PersonnelNumber, [Subtype] as Subtype, [Start Date] as StartDate, " +
                    "[End Date] as EndDate, [Insurance scheme contribution level - Indonesia] as InsuranceschemecontributionlevelIndonesia, [Insurance Account Id] as InsuranceAccountId, [Number of Dependents covered for the Insurance Scheme] as NumberofDependentscoveredfortheInsuranceScheme, [Employee Amount Contribution] as EmployeeAmountContribution, TanggalEdit " +
                    "FROM [SAPHCM].[dbo].[HCM09_PrivateInsurance] WHERE [Emp ID]='" + empID.substring(2, 14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function SimpanData() {
        var url = '/Input/ExecSQL';
        var IDD = $('#IDD').val();
        if (IDD == "") {
            IDD = guid();
        }
        var EmpID = $('#CariNIK').val().substring(2, 14);
        var PersonnelNumber = $('#PersonnelNumber').val();
        var Subtype = $('#Subtype').data('kendoDropDownList').value();
        var StartDate = "01.01.2018";
        var EndDate = "31.12.1999";
        var InsuranceschemecontributionlevelIndonesia = $('#Subtype').data('kendoDropDownList').value();
        var InsuranceAccountId = $('#InsuranceAccountId').val();
        var NumberofDependentscoveredfortheInsuranceScheme = $('#NumberofDependentscoveredfortheInsuranceScheme').val();
        var EmployeeAmountContribution = $('#EmployeeAmountContribution').val();
        var TanggalEdit = $('#TanggalEdit').val();

        return $.ajax({
            url: url,
            data: {
                scriptSQL: "exec [SAPHCM].dbo.SimpanHCM09_PrivateInsurance '" + IDD + "','" + EmpID + "','" + PersonnelNumber + "','" + Subtype + "','" + StartDate + "','" + EndDate +
                    "','" + InsuranceschemecontributionlevelIndonesia + "','" + InsuranceAccountId + "','" + NumberofDependentscoveredfortheInsuranceScheme + "','" + EmployeeAmountContribution + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function guid() {
        function s4() {
            return Math.floor((1 + Math.random()) * 0x10000)
                .toString(16)
                .substring(1);
        }
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
            s4() + '-' + s4() + s4() + s4();
    }
</script>

