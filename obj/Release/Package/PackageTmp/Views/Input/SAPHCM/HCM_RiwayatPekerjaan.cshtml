@*detail*@
<div id="_detail" class="_detail">
</div>

<script>

    $(document).ready(function () {
        
    });

    function btnProsesOnClick()
    {
         EmpIDOnSelect();
    }

    function EmpIDOnSelect(e) {
        GetEmployee().done(function (data) {
            if (data) {
                var dta = data[0];
                $('#FullName').text(dta.FullName);
                $('#TempatLahir').text(dta.TempatLahir);
                $('#NegaraTempatLahir').text(dta.NegaraTempatLahir);
                $('#TanggalLahir').text(dta.TanggalLahir);
                $('#Agama').text(dta.Agama);
                GetRiwayatPekerjaan(dta.EmpID).done(function (data) {
                    if (data) {
                        dta = data[0];
                        $('#IDD').val(dta.IDD);
                        $('#PersonnelNumber').val(dta.PersonnelNumber);
                        $('#TMTBekerja').val(dta.TMTBekerja);
                        $('#StatusKaryawan').data('kendoDropDownList').value(dta.StatusKaryawan);
                        stringDecode(dta.DiklatTerakhir).done(function (data) {
                            $('#DiklatTerakhir').data('kendoEditor').value(data);
                        });
                        $('#RiwayatPunishment').data('kendoDropDownList').value(dta.RiwayatPunishment);
                        $('#TanggalEdit').val(dta.TanggalEdit);
                    }
                });
            }
        });
    }

    function GetEmployee() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM02_ListEmployee',
                scriptSQL: "SELECT [Emp ID] as EmpID,[Full Name] as FullName,[Tempat Lahir] as TempatLahir,[Tanggal Lahir] as TanggalLahir, [Negara Tempat Lahir] as NegaraTempatLahir, [Agama] as Agama FROM [SAPHCM].[dbo].[HCM02_ListEmployee] " +
                    "WHERE [Emp ID]='" + empID.substring(2,14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function GetRiwayatPekerjaan() {
        var url = '/Input/GetDataFrom';
        var empID = $('#CariNIK').val();
        return $.ajax({
            url: url,
            data: {
                strClassView: 'Ptpn8.Models.SAPHCM.View_HCM_RiwayatPekerjaan',
                scriptSQL: "SELECT  IDD, [Emp ID] as EmpID, [Personnel Number] as PersonnelNumber, TMTBekerja, StatusKaryawan, " +
                    "DiklatTerakhir, RiwayatPunishment, TanggalEdit " +
                    "FROM [SAPHCM].[dbo].[HCM_RiwayatPekerjaan] WHERE [Emp ID]='" + empID.substring(2, 14) + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function SimpanData() {
        var url = '/Input/ExecSQL';
        var IDD = $('#IDD').val();
        if (IDD == "") {
            IDD = guid();
        }
        var EmpID = $('#CariNIK').val().substring(2, 14);
        var PersonnelNumber = $('#PersonnelNumber').val();
        var TMTBekerja = $('#TMTBekerja').val();
        var StatusKaryawan = $('#StatusKaryawan').data('kendoDropDownList').value();
        var DiklatTerakhir = $('#DiklatTerakhir').val();
        var RiwayatPunishment = $('#RiwayatPunishment').data('kendoDropDownList').value();
        var TanggalEdit = $('#TanggalEdit').val();

        return $.ajax({
            url: url,
            data: {
                scriptSQL: "exec [SAPHCM].dbo.SimpanHCM_RiwayatPekerjaan '" + IDD + "','" + EmpID + "','" + PersonnelNumber + "','" + TMTBekerja + "','" + StatusKaryawan + "','" + DiklatTerakhir +
                    "','" + RiwayatPunishment + "'",
                _menuId: menuId
            },
            type: 'POST',
            datatype: 'json'
        });
    }

    function guid() {
        function s4() {
            return Math.floor((1 + Math.random()) * 0x10000)
                .toString(16)
                .substring(1);
        }
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
            s4() + '-' + s4() + s4() + s4();
    }

function stringDecode(strDecode) {
    var url = '/Input/StringDecode';
    return $.ajax({
        url: url,
        data: {
            str: strDecode
        },
        type: 'POST',
        datatype: 'json'
    });
}
</script>

