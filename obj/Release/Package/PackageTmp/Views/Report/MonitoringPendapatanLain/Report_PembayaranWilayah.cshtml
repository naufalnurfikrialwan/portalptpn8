    function btnPrintHeaderOnClick(e) {
        e.preventDefault();
        var grid = this;
        var row = $(e.currentTarget).closest("tr");

        var data = grid.dataItem(row);
        var fakturPajakSementara_HDRId = data.FakturPajakSementara_HDRId;

