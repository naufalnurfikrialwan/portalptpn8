    #reportViewer {
        position: absolute;
        left: 5px;
        right: 5px;
        top: 5px;
        bottom: 5px;
        overflow: hidden;
        font-family: Verdana, Arial;
    }

    ._headerteh, #kriteria {
        padding: 5px 5px;
        border-radius: 2px;
        background-color: #82E0AA;
    }
</style>


