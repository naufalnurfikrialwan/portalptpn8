                            tabstrip.Add().Text("III. Rincian").Selected(false)
                            .Content(@<text>
                                @(Html.Kendo()
                                                    .Grid<Ptpn8.SMPNVIII.Models.ReportDokumen>(Guid.Empty.ToString())
                                                    .Name("grdDetail2")
                                                    .Columns(g =>
