@model string
@(Html.Kendo().AutoCompleteFor(m => m)
        .MinLength(2)
        .Filter("contains")
        .Placeholder("Pilih Lokasi Tujuan..")
        .DataTextField("Nama")
        .DataSource(ds => ds.Read(r => r.Action("GetLokasiKerja1", "ddl", new { Area = "Referensi" }).Data("filterTujuan").Type(HttpVerbs.Post)))
        .HtmlAttributes(new { style = "width: 100%" })
        .Events(e => { e.Select("aucLokasiKerjaTujuanOnSelect"); e.DataBound("aucLokasiKerjaTujuanOnDataBound"); })
)

