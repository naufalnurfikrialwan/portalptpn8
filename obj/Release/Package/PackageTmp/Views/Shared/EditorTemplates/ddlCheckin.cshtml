@model string

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(new List<SelectListItem>()
        {
            new SelectListItem() {
                Text = "Sudah Check In",
                Value = "1"
            },
            new SelectListItem() {
                Text = "Belum Check In",
                Value = "0"
            }
        })
        .Events(e => { e.Change("ddlJenisKelaminOnChange"); e.Select("ddlJenisKelaminOnChange"); })
)
@Html.ValidationMessageFor(m => m)
