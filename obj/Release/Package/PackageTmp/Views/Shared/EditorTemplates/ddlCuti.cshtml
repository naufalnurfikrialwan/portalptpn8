            new SelectListItem() {
                Text = "Cuti Tahunan",
                Value = "Cuti Tahunan"
            },
            new SelectListItem() {
                Text = "Cuti Panjang",
                Value = "Cuti Panjang"
            },
            new SelectListItem() {
                Text = "Cuti Hamil",
                Value = "Cuti Hamil"
            },
            new SelectListItem() {
                Text = "Cuti Diluar Tanggungan",
                Value = "Cuti Diluar Tanggungan"
            }
        })
        .Events(e => { e.Change("ddlCutiOnSelect"); e.Select("ddlCutiOnSelect"); })
)
