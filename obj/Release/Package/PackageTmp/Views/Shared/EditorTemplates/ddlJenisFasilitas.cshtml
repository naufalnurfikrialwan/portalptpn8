        {
            new SelectListItem() {
                Text = "Lapangan Dan Camping Ground",
                Value = "Lapangan Dan Camping Ground"
            },
            new SelectListItem() {
                Text = "Hiburan",
                Value = "Hiburan"
            },
            new SelectListItem() {
                Text = "Akomodasi",
                Value = "Akomodasi"
            },
            new SelectListItem() {
                Text = "Makanan",
                Value = "Makanan"
            },
            new SelectListItem() {
                Text = "Snack",
                Value = "Snack"
            }
        })
        .Events(e => { e.Change("ddlJenisFasilitasOnChange"); e.Select("ddlJenisFasilitasOnChange"); })
)
