@model string

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(new List<SelectListItem>()
        {
           new SelectListItem() {
                Text = "1 x Sehari",
                Value = "1"
            },
            new SelectListItem() {
                Text = "2 x Sehari",
                Value = "2"
            },
            new SelectListItem() {
                Text = "3 x Sehari",
                Value = "3"
            }
        })
        .Events(e => { e.Change("ddlJumlahMakanOnChange"); e.Select("ddlJumlahMakanOnChange"); })
)
@Html.ValidationMessageFor(m => m)
