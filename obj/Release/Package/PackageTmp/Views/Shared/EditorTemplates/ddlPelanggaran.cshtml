@model string

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(new List<SelectListItem>()
        {
            new SelectListItem() {
                Text = "RINGAN",
                Value = "RINGAN"
            },
            new SelectListItem() {
                Text = "SEDANG",
                Value = "SEDANG"
            },
            new SelectListItem() {
                Text = "BERAT",
                Value = "BERAT"
            }
        })
        .Events(e => { e.Change("ddlPelanggaranOnSelect"); e.Select("ddlPelanggaranOnSelect"); })
)
@Html.ValidationMessageFor(m => m)


