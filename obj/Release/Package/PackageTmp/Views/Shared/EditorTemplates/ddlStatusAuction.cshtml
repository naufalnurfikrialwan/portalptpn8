@model string

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(new List<SelectListItem>()
        {
            new SelectListItem() {
                Text = "BID",
                Value = "BID"
            },
            new SelectListItem() {
                Text = "NO BID",
                Value = "NO BID"
            },
            new SelectListItem() {
                Text = "WD",
                Value = "WD"
            }
        })
        .Events(e => { e.Change("ddlStatusAuctionOnChange"); e.Select("ddlStatusAuctionOnChange"); })
)
@Html.ValidationMessageFor(m => m)

