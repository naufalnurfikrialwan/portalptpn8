@{
    ViewBag.Title = "Upload Data KPI";
}
<img id="progress" src="~/Content/Images/ajax-loader.gif" style="position: absolute; left: 50%; top: 5%; " />

@(Html.Kendo().TextBox().HtmlAttributes(new { style = "display: none;" }).Name("KodeUnit").Value(@ViewBag.KodeUnit))
@(Html.Kendo().TextBox().Name("FileZIP").HtmlAttributes(new { style = "display: none;" }))

<table width="100%;">
    <tr><td style="text-align: center; font-weight:600; font-size: large; background: lightgray;vertical-align:middle;">Upload Data KPI</td></tr>
</table>

<div id="splitter">
    @(Html.Kendo().Splitter().Name("horizontal").HtmlAttributes(new { style = "height: 600px;" }).Panes(hz =>
        {
            hz.Add().Size("15%").HtmlAttributes(new { id = "left-pane" })
                .Collapsible(true).Content(@<text>
        @Html.Partial("~/Views/UploadDataKPI/UploadDataKPI_left_pane.cshtml")
                </text>);
            hz.Add().HtmlAttributes(new { id = "middle-pane" })
                .Collapsible(false).Content(@<text>
        @Html.Partial("~/Views/UploadDataKPI/UploadDataKPI_middle_pane.cshtml")
                </text>);
        }))
</div>
<script>
    var menuId;

    $(document).ajaxStart(function () {
        $("#progress").show();
    }).ajaxStop(function () {
        $("#progress").hide();
    });

    $(document).ready(function () {
        menuId = "04E229A4-7408-435D-9AB8-7521628AC8B5";
    });
</script>

